{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": "next/core-web-vitals",
  "plugins": ["boundaries"],

  "settings": {
    "boundaries/elements": [
      {
        "type": "domain",
        "pattern": "src/domain/*"
      },
      {
        "type": "use-cases",
        "pattern": "src/use-cases/*"
      },
      {
        "type": "infra",
        "pattern": "src/infrastructure/*"
      },
      {
        "type": "app",
        "pattern": "src/app/*"
      }
    ]
  },

  "rules": {
    "boundaries/element-types": [
      "error",
      {
        "default": "disallow",
        "rules": [
          {
            "from": ["domain", "use-cases", "infra"],
            "allow": ["domain"]
          },
          {
            "from": ["app"],
            "allow": ["domain", "use-cases", "infra", "app"]
          }
        ]
      }
    ],
    "boundaries/external": [
      "error",
      {
        "default": "allow",
        "rules": [
          {
            "from": ["domain"],
            "disallow": ["*"]
          }
        ]
      }
    ]
  }
}
